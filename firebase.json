{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [ {
      "source" : "/login",
      "destination" : "/",
      "type" : 301
    }],
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    } ],
    "cleanUrls": true
  }
}
